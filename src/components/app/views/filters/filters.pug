span.label Filters:
.filters
    label.empty-container Empty
        input(type="checkbox" checked="true" onclick="Interface.changeEmpty(event)")#empty
        span.empty-checkmark

    select.device(onchange="Interface.changeDevice(+this.value)")#device
        option(value="-1").none No Device Filter
        option(value="0" style="background-color:var(--color-unknown)") Unknown
        option(value="1" style="background-color:var(--color-mobile)") Mobile
        option(value="2" style="background-color:var(--color-iphone)") iPhone
        option(value="3" style="background-color:var(--color-ipad)") iPad
        option(value="4" style="background-color:var(--color-android)") Android
        option(value="5" style="background-color:var(--color-wphone)") WPhone
        option(value="6" style="background-color:var(--color-windows)") Windows
        option(value="7" style="background-color:var(--color-web)") Web

    span.label Period:
    .period
        input(type="text")#period-slider

    span.label Zoom:
    .zoom
        input(type="text")#zoom-slider