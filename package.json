{
	"scripts": {
		"build": "npm run build:css & npm run build:js & npm run build:html",
		"watch": "./node_modules/.bin/npm-run-all --parallel watch:*",
		"clean": "find ./dist -type f -name '*.include.*' -delete & find ./dist -type d -empty -delete",
		"clean:win": "cd ./dist & del /S *.include.* & for /f \"delims=\" %d in ('dir /s /b /ad ^| sort /r') do rd \"%d\" /Q",
		"build:html": "./node_modules/.bin/pug ./src -o ./dist -P --basedir ./",
		"build:js": "./node_modules/.bin/tsc",
		"build:css": "./node_modules/.bin/node-sass --recursive ./src/ --output ./dist/",
		"watch:html": "./node_modules/.bin/pug ./src -o ./dist -P --basedir ./ -w",
		"watch:js": "./node_modules/.bin/tsc -w",
		"watch:css": "./node_modules/.bin/node-sass --watch --recursive ./src/ --output ./dist/"
	},
	"dependencies": {},
	"devDependencies": {
		"@types/jquery": "^3.3.31",
		"@types/node": "^12.12.8",
		"eslint": "^6.6.0",
		"node-sass": "^4.13.0",
		"npm-run-all": "^4.1.5",
		"pug": "^2.0.4",
		"pug-cli": "^1.0.0-alpha6",
		"typescript": "^3.7.2"
	}
}
